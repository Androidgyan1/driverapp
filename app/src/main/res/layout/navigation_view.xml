<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="#F1C40F"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/re1"
        android:background="#F1C40F"
        android:layout_height="150dp">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/photo"
        android:layout_marginTop="12dp"
        android:src="@drawable/photo"></ImageView>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:id="@+id/jhonsmith"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/photo"
        android:text="Jhon Smith"
        android:textColor="@android:color/white"
        android:textSize="20dp"></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jhonsmith"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/photo"
            android:text="jhonsmith@gmail.com"
            android:textColor="@android:color/white"
            android:gravity="bottom|center"
            android:textSize="15dp"></TextView>




    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D0D3D4"
        android:layout_below="@id/re1"></View>

</RelativeLayout>
