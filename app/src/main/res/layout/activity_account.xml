<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:id="@+id/toolbaraccount"
                android:layout_height="wrap_content"
                android:background="#F1C40F">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"></TextView>
            </androidx.appcompat.widget.Toolbar>





           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:id="@+id/cadr4"
               app:cardElevation="6dp"
               android:layout_below="@id/toolbaraccount"
               android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:padding="50dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/car1"
        android:layout_height="wrap_content"
        android:src="@drawable/photo"></ImageView>



    <View
        android:layout_width="2dp"
        android:background="#D0D3D4"
        android:layout_height="50dp"
        android:layout_centerInParent="true"></View>



    <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/car"
                android:layout_height="wrap_content"
                android:src="@drawable/man"
                android:layout_alignParentRight="true"></ImageView>


    </RelativeLayout>
           </androidx.cardview.widget.CardView>

</RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#D0D3D4"></View>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="50dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_help"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  Help"></TextView>






        </androidx.cardview.widget.CardView>









        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="50dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_document"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  Document"></TextView>






        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="50dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_settings"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  Setting"></TextView>






        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="50dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:fontFamily="@font/light"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_about"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  About"></TextView>

        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="50dp"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:fontFamily="@font/light"
                android:layout_gravity="center"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_logout"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  Logout"></TextView>

        </androidx.cardview.widget.CardView>


















    </LinearLayout>




</ScrollView>