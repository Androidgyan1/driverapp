<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/map"
        android:src="@drawable/map"
        android:scaleType="fitXY"></ImageView>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/map"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/re1"
            android:layout_height="match_parent"
            android:padding="10dp">

            <ImageView
                android:layout_width="80dp"
                android:id="@+id/name"
                android:layout_height="80dp"
                android:src="@drawable/name"
                android:layout_marginLeft="12dp"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/jhon"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/name"
                android:layout_marginLeft="12dp"
                android:text="Jhon Smith"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:textSize="20sp"
                android:layout_below="@id/jhon"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@id/name"
                android:layout_marginLeft="20dp"
                android:text="Ranjit hanuman mandir"></TextView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/re2"
                android:padding="20dp"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:layout_below="@id/location">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/call"
                    android:src="@drawable/ic_call"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:fontFamily="@font/light"
                    android:id="@+id/callext"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/call"></TextView>



                <ImageView
                    android:layout_width="30dp"
                    android:layout_toRightOf="@+id/callext"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/cacel"
                    android:src="@drawable/ic_chat_bubbles_with_ellipsis"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:fontFamily="@font/light"
                    android:id="@+id/chattext"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cacel"></TextView>



                <ImageView
                    android:layout_width="30dp"
                    android:layout_toRightOf="@+id/chattext"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/cancel"
                    android:src="@drawable/ic_cancel"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:fontFamily="@font/light"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/cancel"></TextView>






            </RelativeLayout>

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Arrive"
    android:textColor="@android:color/white"
    android:background="#F1C40F"
    android:layout_below="@+id/re2"></Button>



        </RelativeLayout>




    </androidx.cardview.widget.CardView>









</RelativeLayout>
</ScrollView>