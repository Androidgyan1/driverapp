<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".History">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1C40F">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Earning"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:gravity="center"></TextView>
        </androidx.appcompat.widget.Toolbar>


<TextView
    android:layout_width="match_parent"
    android:textSize="30sp"
    android:fontFamily="@font/light"
    android:layout_marginTop="12dp"
    android:gravity="center"
    android:textStyle="bold"
    android:textColor="@android:color/black"
    android:layout_height="wrap_content"
    android:text="Total Amount"></TextView>


        <TextView
            android:layout_width="match_parent"
            android:textSize="25sp"
            android:fontFamily="@font/light"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="$ 1000"></TextView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:gravity="center"
            android:layout_marginTop="20dp">

           <androidx.cardview.widget.CardView
               android:layout_width="150dp"
               app:cardElevation="8dp"
               app:cardCornerRadius="4dp"
               android:layout_height="150dp">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:textColor="@android:color/darker_gray"
                   android:layout_marginTop="20dp"
                   android:layout_marginLeft="20dp"
                   android:text="Today"></TextView>



               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="18sp"
                   android:layout_marginBottom="20dp"
                   android:layout_gravity="bottom|right"
                   android:textColor="@android:color/black"
                   android:layout_marginRight="18dp"
                   android:text="$ 200"></TextView>

           </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardElevation="8dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="4dp"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Weekly"></TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="18dp"
                    android:text="$ 200"></TextView>

            </androidx.cardview.widget.CardView>






        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="18dp"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardElevation="8dp"
                app:cardCornerRadius="4dp"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Monthly"></TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="18dp"
                    android:text="$ 200"></TextView>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                app:cardElevation="8dp"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="4dp"
                android:layout_height="150dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="Yearly"></TextView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginBottom="20dp"
                    android:layout_gravity="bottom|right"
                    android:textColor="@android:color/black"
                    android:layout_marginRight="18dp"
                    android:text="$ 400"></TextView>

            </androidx.cardview.widget.CardView>






        </LinearLayout>




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            app:cardCornerRadius="4dp"
            android:layout_height="match_parent"
            app:cardElevation="10dp">

            <TextView
                android:layout_width="match_parent"
                android:textSize="30sp"
                android:fontFamily="@font/light"
                android:drawableEnd="@drawable/ic_right_arrow"
                android:drawableStart="@drawable/ic_history"
                android:textColor="#F1C40F"
                android:layout_height="wrap_content"
                android:text="  History"></TextView>






        </androidx.cardview.widget.CardView>



    </LinearLayout>







</ScrollView>